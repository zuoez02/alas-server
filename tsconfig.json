{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": [
          "es2017",
          "es2015"
        ],
        "target": "es5",
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
          "@/*": ["./src/*"]
        }
    },
    "include": [
      "*.ts",
      "src/**/*.ts",
      "src/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
