{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": [
          "es2017",
          "es2015"
        ],
        "target": "es5",
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
          "@/*": ["./src/*"]
        }
    },
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
